<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0" 
       xmlns:xs="http://www.w3.org/2001/XMLSchema" 
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">
  
  <info name="FCC"
        title="FCC Muons Forward"
        author="Clement"
        url="no"
        status="development"
        version="$Id:??$">
    <comment>A solenoid</comment>
  </info>

  <define>
    <constant name="MuonForwardZ" value="10*cm"/> 
    <constant name="MuonForwardRmin" value="50*cm"/> 
    <constant name="MuonForwardRmax" value="500*cm"/> 
  </define>
  
   <display>
        <vis name="MuonForwardVis" r="0.4" g="0.8" b="1.0" alpha="1" showDaughters="true" visible="true" drawingStyle="wireframe" />
   </display>

  <detectors>
    <detector  id ="26" name="MuonForward_1" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 1</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="2950.*cm"  material="Aluminum"/>  
    </detector>

    <detector  id ="27" name="MuonForward_2" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 2</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="-2950.*cm"  material="Aluminum"/>  
    </detector>

    <detector  id ="28" name="MuonForward_3" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 3</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="3050.*cm"  material="Aluminum"/>  
    </detector>

    <detector  id ="29" name="MuonForward_4" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 4</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="-3050.*cm"  material="Aluminum"/>  
    </detector>

    <detector  id ="30" name="MuonForward_5" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 5</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="3150.*cm"  material="Aluminum"/>  
    </detector>

    <detector  id ="21" name="MuonForward_6" type="SimpleCylinder" insideTrackingVolume="true" vis="MuonForwardVis">
      <comment>Muon Forward 6</comment>
      <tubs rmin="MuonForwardRmin" rmax="MuonForwardRmax" dz="MuonForwardZ" phi0="0" deltaphi="360*deg"  z_offset="-3150.*cm"  material="Aluminum"/>  
    </detector>


  </detectors>


</lccdd>
